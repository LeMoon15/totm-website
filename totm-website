  <script>
    const form = document.getElementById('totmForm');

    const el = (id) => document.getElementById(id);
    const safe = (v) => (v && String(v).trim().length ? String(v).trim() : "‚Äî");

    function update(){
      const data = Object.fromEntries(new FormData(form).entries());

      el('certUnit').textContent = "Unit/Department: " + safe(data.unit);
      el('certMonthYear').textContent = "Month/Year: " + safe(data.month) + " " + safe(data.year);
      el('certName').textContent = safe(data.name);
      el('certRankBadge').textContent = "Rank/Badge: " + safe(data.rankBadge);
      el('certDivision').textContent = "Station/Division: " + safe(data.division);
      el('certSupervisor').textContent = "Supervisor: " + safe(data.supervisor);

      el('certReason').textContent = safe(data.reason);

      el('certA1').textContent = "‚Ä¢ " + safe(data.a1);
      el('certA2').textContent = "‚Ä¢ " + safe(data.a2);
      el('certA3').textContent = "‚Ä¢ " + safe(data.a3);
      el('certA4').textContent = "‚Ä¢ " + safe(data.a4);

      el('certStats').textContent =
        "Citations/Arrests: " + safe(data.stats1) +
        "  |  Community Engagement: " + safe(data.stats2) +
        "  |  Special Assignments: " + safe(data.stats3) +
        "  |  Other: " + safe(data.stats4);

      el('certComments').textContent = safe(data.comments);

      el('certPresentedBy').textContent = safe(data.presentedBy);
      el('certDatePresented').textContent = safe(data.datePresented);
      el('certSignature').textContent = safe(data.signature);
    }

    form.addEventListener('input', update);
    update();

    document.getElementById('btnPrint').addEventListener('click', () => window.print());
    document.getElementById('btnReset').addEventListener('click', () => {
      form.reset();
      update();
    });
  </script>
